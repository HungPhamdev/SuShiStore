@using ASM.Models
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Extensions
@using ASM.Constants

@{string email = Context.Session.GetString(SessionKey.Customer.Cus_Email);}
@{string fullName = Context.Session.GetString(SessionKey.Customer.Cus_FullName);}
@{string cart = Context.Session.GetString("cart");}

    <ul class="navbar-nav">
        <li>
            <a class="nav-link text-dark" href="/Home/Cart">
                @if (cart != null && cart != "")
                {
                    <img id="imgCart" src="~/images/cartA.png" style="width:30px" />
                }
                else
                {
                    <img id="imgCart" src="~/images/cart.png" style="width:30px" />
                }
            </a>
        </li>
        @if (email != null && email != "")
        {
            <li class="nav-item">
                <a id="information" class="nav-link text-warning" href="/Home/Info" style="width:176px;">Chào @fullName!</a>
            </li>
            <li class="nav-item">
                <a id="history" class="nav-link text-white" href="/Home/History" style="width:116px;"><i class="fas fa-shopping-cart"></i> Đơn hàng </a>
            </li>
            <li class="nav-item">
                <form asp-area="" asp-controller="Home" asp-action="Logout" method="post" id="logoutForm">
                    <button id="logout" type="submit" class="nav-link btn btn-link text-warning" style="width:116px;"><i class="fas fa-sign-out-alt"></i> Đăng xuất</button>
                </form>
            </li>
        }
        else
        {
            <li class="nav-item">
                <a id="login" class="nav-link text-warning" href="/Home/Register" style="width:96px;"><i class="fas fa-sign-in-alt"></i> Đăng ký</a>
            </li>
            <li class="nav-item">
                <a id="login" class="nav-link text-warning" href="/Home/Login" style="width:116px;"><i class="fas fa-sign-in-alt"></i> Đăng nhập</a>
            </li>
        }
    </ul>



