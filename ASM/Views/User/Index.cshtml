@model IEnumerable<ASM.Models.User>

@{
    ViewData["Title"] = "Danh sách người dùng";
}

<h1 class="text-danger"><i class="fas fa-user"></i> Người dùng</h1>

<p>
    <a asp-action="Create" style="text-decoration:none" class="text-info"><i class="fas fa-user-plus"></i> Thêm người dùng</a>
</p>
<form asp-controller="User" asp-action="FindUserAll" method="post">
    <input class="search js-search form-control form-control-rounded mr-sm-2" name="fullName" title="Tìm kiếm tại đây.." placeholder="Tìm kiếm bằng họ tên người dùng.." aria-label="Search" type="text">
    <br />
    <button class="btn btn-outline-warning my-2 my-sm-0" type="submit"><i class="fas fa-search"></i> Tìm</button>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DOB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Admin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Locked)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)                
            </th>
            @*<th>
            @Html.DisplayNameFor(model => model.Password)
            </th>*@
            @*<th>
            @Html.DisplayNameFor(model => model.ConfirmPassword)
            </th>*@
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DOB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Admin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Locked)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.Image)*@
                <img src="~/images/user/@item.Image" style="width:150px" />
            </td>
            @*<td>
            @Html.DisplayFor(modelItem => item.Password)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ConfirmPassword)
        </td>*@
            <td>
                <a asp-action="Edit" asp-route-id="@item.UserID" class="text-warning"><i class="fas fa-edit"></i></a> |
                <a asp-action="Details" asp-route-id="@item.UserID" class="text-primary"><i class="fas fa-info-circle"></i></a> @*|*@
                @*<a asp-action="Delete" asp-route-id="@item.UserID">Delete</a>*@
            </td>
        </tr>
}
    </tbody>
</table>
