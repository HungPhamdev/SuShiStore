@model IEnumerable<ASM.Models.Order>

@{
    ViewData["Title"] = "Danh sách đơn hàng";
}

<h1 class="text-success"><i class="fas fa-th-list"></i> Danh sách đơn hàng</h1>

@*<p>
        <a asp-action="Create">Create New</a>
    </p>*@

<form asp-controller="Order" asp-action="FindOrderAll" method="post">
    <input class="search js-search form-control form-control-rounded mr-sm-2" name="totalMoney" aria-label="Search" min="1" type="number">
    <br />
    <button class="btn btn-outline-warning my-2 my-sm-0" type="submit"><i class="fas fa-search"></i> Tìm</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalMoney)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Note)
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Customer)*@
                Khách Hàng
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalMoney)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Note)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Customer.FullName) -
                    @Html.DisplayFor(modelItem => item.Customer.Address)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.OrderID" class="text-warning"><i class="fas fa-edit"></i></a> |
                    <a asp-action="Details" asp-route-id="@item.OrderID" class="text-primary"><i class="fas fa-info-circle"></i></a> @*|*@
                    @*<a asp-action="Delete" asp-route-id="@item.OrderID">Delete</a>*@
                </td>
            </tr>
        }
    </tbody>
</table>
