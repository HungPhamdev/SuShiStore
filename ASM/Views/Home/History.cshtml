@model IEnumerable<ASM.Models.Order>

@{
    ViewData["Title"] = "Lịch sử mua hàng";
    Layout = "~/Views/Shared/_WebLayout.cshtml";
}

    <h1 class="text-danger pl-3"><i class="fas fa-history"></i> Lịch sử mua hàng</h1>

@*<p>
    <a asp-action="Create">Create New</a>
</p>*@
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalMoney)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Note)
            </th>
            <th>
               @* @Html.DisplayNameFor(model => model.Customer)*@
                Khách Hàng
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalMoney)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Note)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.FullName) -
                @Html.DisplayFor(modelItem => item.Customer.Address)
            </td>
            <td>
                @*<a asp-action="Edit" asp-route-id="@item.OrderID">Edit</a> |*@
                <a asp-action="Details" asp-route-id="@item.OrderID" class="text-primary"><i class="fas fa-info-circle"></i></a> 
                @*<a asp-action="Delete" asp-route-id="@item.OrderID">Delete</a>*@
            </td>
        </tr>
}
    </tbody>
</table>
<div>
    <a asp-action="Index" class="ml-2" style="text-decoration:none;"><i class="fas fa-arrow-circle-left"></i> Quay lại</a>
</div>
