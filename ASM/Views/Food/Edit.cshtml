@model ASM.Models.Food

@{
    ViewData["Title"] = "Chỉnh sửa món ăn";
}

<h1 class="text-success"><i class="fas fa-edit"></i> Chỉnh sửa món ăn</h1>

<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FoodID" />
            <div class="row">
                <div class="form-group col-6">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-6">
                    <label asp-for="Classify" class="control-label"></label>
                    <select asp-for="Classify" class="form-control" asp-items="Html.GetEnumSelectList<Classify>()">
                        <option value="0">Select type ...</option>
                    </select>
                    <span asp-validation-for="Classify" class="text-danger"></span>
                </div>
                <div class="form-group" style="display:none">
                    <label asp-for="Image" class="control-label"></label>
                    <input asp-for="Image" class="form-control" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <img src="~/images/Food/@Model.Image" style="height:100px" />
                </div>
                <div class="form-group col-6">
                    <label asp-for="ImageFile" class="control-label"></label>
                    <input asp-for="ImageFile" class="form-control" type="file" />
                </div>
            </div>
            <div class="row">
                <div class="form-group col-6">
                    <label asp-for="Des" class="control-label"></label>
                    <input asp-for="Des" class="form-control" />
                    <span asp-validation-for="Des" class="text-danger"></span>
                </div>
                <div class="form-group form-check col-6">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Status" /> @Html.DisplayNameFor(model => model.Status)
                    </label>
                </div>
            </div>
            <div class="form-group">
                @*<input type="submit" value="Save" class="btn btn-primary" />*@
                <button type="submit" class="btn btn-lg btn-warning text-success"><i class="fas fa-save"></i> Lưu</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="" style="text-decoration:none;"><i class="fas fa-arrow-circle-left"></i> Quay lại</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
