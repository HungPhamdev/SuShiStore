@model ASM.Models.Food

@{
    ViewData["Title"] = "Tạo món ăn mới";
}

<h1 class="text-success"><i class="fas fa-plus-square"></i> Tạo món ăn mới</h1>
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create" enctype="multipart/form-data">
            @*Them emty-data*@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="form-group col-6">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-6">
                    <label asp-for="Classify" class="control-label"></label>
                    <select asp-for="Classify" class="form-control" asp-items="Html.GetEnumSelectList<Classify>()">
                        <option value="0">Select type ...</option>
                    </select>
                    <span asp-validation-for="Classify" class="text-danger"></span>
                </div>
                <div class="form-group" style="display:none">
                    <label asp-for="Image" class="control-label"></label>
                    <input asp-for="Image" class="form-control" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <label asp-for="ImageFile" class="control-label"></label>
                    <input asp-for="ImageFile" class="form-control" type="file" />
                </div>
            </div>
            <div class="row">
                <div class="form-group col-6">
                    <label asp-for="Des" class="control-label"></label>
                    <input asp-for="Des" class="form-control" />
                    <span asp-validation-for="Des" class="text-danger"></span>
                </div>
                <div class="form-group form-check col-6">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Status" /> @Html.DisplayNameFor(model => model.Status)
                    </label>
                </div>
            </div>
            <div class="form-group">
                @*<input type="submit" value="Create" class="btn btn-primary" />*@
                <button type="submit" class="btn btn-lg btn-primary text-warning"><i class="fas fa-plus-circle"></i> Thêm</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="" style="text-decoration:none;"><i class="fas fa-arrow-circle-left"></i> Quay lại</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
