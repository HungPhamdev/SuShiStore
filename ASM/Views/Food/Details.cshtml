@model ASM.Models.Food

@{
    ViewData["Title"] = "Chi tiết món ăn";
}

    <h1 class="text-primary"><i class="fas fa-info-circle"></i> Chi tiết món ăn</h1>

<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Classify)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Classify)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd class="col-sm-10">
            <img src="~/images/Food/@Model.Image" style="width:250px" />
            @*@Html.DisplayFor(modelItem => item.Image)*@
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Des)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Des)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.FoodID" class="btn btn-lg btn-warning text-success"><i class="fas fa-edit"></i> Sửa</a> |
    <a asp-action="Index" class="" style="text-decoration:none;"><i class="fas fa-arrow-circle-left"></i> Quay lại</a>
</div>
